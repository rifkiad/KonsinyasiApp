<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="detail_deposit">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_1sdp</item>
        <item name="fontFamily">@font/lato</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_13ssp</item>
    </style>

    <style name="text_detail">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/lato</item>
        <item name="android:textSize">@dimen/_13ssp</item>
    </style>

    <style name="text1_deposit">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/lato</item>
    </style>

    <style name="text2_deposit">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/lato_black</item>
    </style>
    
    <style name="text_item_product">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/lato</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="MyTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/white</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
    </style>

    <style name="MyTextInputEditTextStyle" parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:background">@drawable/white_outline</item>
    </style>







</resources>